  <!-- Modal 2 -->
   <div id="modal2"
    class="fixed inset-0 bg-black/60 backdrop-blur-sm hidden flex items-center justify-center z-50 transition-opacity duration-300">
    <div
      class="bg-white/10 backdrop-blur-xl border border-white/20 rounded-xl p-6 w-11/12 md:w-2/3 lg:w-1/2 text-white transform scale-95 opacity-0 transition-all duration-300 modal-content">
